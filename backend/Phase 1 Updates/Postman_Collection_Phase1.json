{
	"info": {
		"name": "Restaurant Inventory - Phase 1 Endpoints",
		"description": "Dashboard metrics, inventory metrics, and remove stock endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"manager@restaurant.com\",\n  \"password\": \"SecurePass123!\"\n}"
						},
						"url": {
							"raw": "http://localhost:3001/api/auth/login",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3001",
							"path": ["api", "auth", "login"]
						}
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:3001/api/auth/me",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3001",
							"path": ["api", "auth", "me"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Metrics - Phase 1",
			"item": [
				{
					"name": "Get Dashboard Metrics",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:3001/api/metrics/dashboard",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3001",
							"path": ["api", "metrics", "dashboard"]
						}
					},
					"response": []
				},
				{
					"name": "Get Inventory Metrics",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:3001/api/metrics/inventory",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3001",
							"path": ["api", "metrics", "inventory"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Inventory - Phase 1",
			"item": [
				{
					"name": "Get All Inventory",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:3001/api/inventory",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3001",
							"path": ["api", "inventory"]
						}
					},
					"response": []
				},
				{
					"name": "Lookup Ingredient by Barcode",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:3001/api/inventory/lookup?barcode=123456789",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3001",
							"path": ["api", "inventory", "lookup"],
							"query": [
								{
									"key": "barcode",
									"value": "123456789"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Receive Inventory",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"items\": [\n    {\n      \"ingredientId\": \"6f88aae2-9c09-45ec-8b34-0500ed7a5aab\",\n      \"quantity\": 25,\n      \"unit\": \"lbs\",\n      \"location\": \"dry storage\",\n      \"expirationDate\": \"2026-09-01\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "http://localhost:3001/api/inventory/receive",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3001",
							"path": ["api", "inventory", "receive"]
						}
					},
					"response": []
				},
				{
					"name": "Remove Inventory (NEW)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"items\": [\n    {\n      \"ingredientId\": \"6f88aae2-9c09-45ec-8b34-0500ed7a5aab\",\n      \"quantity\": 5,\n      \"unit\": \"lbs\",\n      \"reason\": \"spoilage\",\n      \"notes\": \"Freezer malfunction - items thawed\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "http://localhost:3001/api/inventory/remove",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3001",
							"path": ["api", "inventory", "remove"]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "token",
			"value": "your_access_token_here",
			"type": "string"
		}
	]
}
